generator seeder {
  provider = "node ../../node_modules/prisma-generator-seeder"
  output   = "./mocking.ts"
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["metrics", "views"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Country {
  id     String   @id @default(uuid())
  name   String
  people Person[]
  houses House[]
}

model House {
  id        String   @id @default(uuid())
  address   String
  people    Person[]
  countryId String
  country   Country  @relation(fields: [countryId], references: [id])
}

model Person {
  id        String @id @default(uuid())
  fullName  String
  houseId   String
  countryId String

  house   House   @relation(fields: [houseId], references: [id])
  country Country @relation(fields: [countryId], references: [id])
}
